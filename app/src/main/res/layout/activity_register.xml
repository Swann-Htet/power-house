<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/logoBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/logoph">
                </ImageView>

                <TextView
                    android:id="@+id/bannerHeaderTitle"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/bebas"
                    android:letterSpacing="0.1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/primary_color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/logoBanner"
                    android:text="MILLION SPORTS">
                </TextView>

                <TextView
                    android:id="@+id/bannerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bannerHeaderTitle"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/secondary_color"
                    android:fontFamily="@font/sfpro"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Registration">
                </TextView>

                <EditText
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_dark_account"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingEnd="15dp"
                    android:id="@+id/editTextFullNameReg"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/secondary_color"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:hint="Enter Your Name"
                    android:layout_below="@+id/bannerTitle">
                </EditText>

                <EditText
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_dark_email"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/sfpro"
                    android:layout_height="50dp"
                    android:id="@+id/editTextEmailReg"
                    android:textColor="@color/secondary_color"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:hint="Enter Your Email Address"
                    android:layout_below="@+id/editTextFullNameReg">
                </EditText>

                <EditText
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_dark_calendar"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/sfpro"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextDobReg"
                    android:textColor="@color/secondary_color"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:focusable="false"
                    android:hint="Select Your Birthday"
                    android:layout_below="@+id/editTextEmailReg">
                </EditText>

                <EditText
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_dark_phone"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/sfpro"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextMobileReg"
                    android:textColor="@color/secondary_color"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:hint="Enter Your Phone Number"
                    android:layout_below="@+id/editTextDobReg">
                </EditText>

                <EditText
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_dark_key"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/sfpro"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextPasswordReg"
                    android:textColor="@color/secondary_color"
                    android:inputType="textVisiblePassword"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:hint="Enter Your Password"
                    android:layout_below="@+id/editTextMobileReg">
                </EditText>

                <EditText
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_dark_mark"
                    android:fontFamily="@font/sfpro"
                    android:paddingEnd="15dp"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextCPasswordReg"
                    android:textColor="@color/secondary_color"
                    android:inputType="textVisiblePassword"
                    android:textSize="16sp"
                    android:background="@drawable/custom_input_account"
                    android:paddingLeft="20dp"
                    android:hint="Confirm Your Password"
                    android:layout_below="@+id/editTextPasswordReg">
                </EditText>

                <RadioGroup
                    android:id="@+id/radioGroupGenReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/editTextCPasswordReg">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioFemale"
                        android:fontFamily="@font/sfpro"
                        android:text="Female"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_color">
                    </RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioMale"
                        android:text="Male"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/sfpro"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_color">
                    </RadioButton>

                </RadioGroup>

                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/buttonReg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Register"
                    android:letterSpacing="0.2"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bebas"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/radioGroupGenReg"
                    android:background="@drawable/custom_button">
                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/buttonReg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro"
                        android:textColor="@color/secondary_color"
                        android:text="Already have an account? ">
                    </TextView>

                    <TextView
                        android:id="@+id/textLogin"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/sfpro"
                        android:textColor="@color/primary_color"
                        android:textFontWeight="600"
                        android:letterSpacing="0.05"
                        android:layout_height="wrap_content"
                        android:text="Login">
                    </TextView>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarReg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateDrawable="@drawable/prograssbar"
        android:backgroundTint="@color/primary_color">
    </ProgressBar>

</RelativeLayout>